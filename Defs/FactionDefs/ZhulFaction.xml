<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <FactionDef>
    <defName>ZHUL_Faction</defName>
    <label>Zhul tribe</label>
    <description>An ancient and terrifying culture of olive-skinned humanoids whose spiritual devotion to cannibal rituals and curled beards dominates their entire way of life. Their raids are sudden and ferocious, often under cover of darkness.</description>
    <factionNameMaker>NamerFactionGeneric</factionNameMaker>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <hidden>false</hidden>
    <canMakeRandomly>true</canMakeRandomly>
    <canAutoRaid>true</canAutoRaid>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <canUseAvoidGrid>true</canUseAvoidGrid>
    <categoryTag>Tribal</categoryTag>
    <techLevel>Neolithic</techLevel>
    <startingGoodwill>0</startingGoodwill>
    <naturalColonyGoodwill>0</naturalColonyGoodwill>
    <settlementGenerationWeight>1.0</settlementGenerationWeight>
    <mustStartOneEnemy>true</mustStartOneEnemy>
    <isPlayer>false</isPlayer>
    <centralMelanin>0.4</centralMelanin>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>

    <!-- Use lowercase for safety and consistency -->
    <xenotypeSet>
      <zhul_xenotype>1.0</zhul_xenotype>
    </xenotypeSet>

    <!-- Required ideology memes for cultural accuracy -->
    <requiredMemes>
      <li>Cannibalism</li>
      <li>RitualScarification</li>
      <li>Raider</li>
    </requiredMemes>

    <!-- Disallow conflicting or non-fitting memes -->
    <disallowedMemes>
      <li>AnimalPersonhood</li>
      <li>Transhumanism</li>
      <li>TreeConnection</li>
    </disallowedMemes>

    <!-- Faction leaders and units -->
    <pawnGroupMakers>
      <li Class="PawnGroupMaker">
        <kindDef>Combat</kindDef>
        <options>
          <li>
            <kind>ZHUL_CurledSavage</kind>
            <selectionWeight>2</selectionWeight>
          </li>
          <li>
            <kind>ZHUL_SpiritEater</kind>
            <selectionWeight>1</selectionWeight>
          </li>
          <li>
            <kind>ZHUL_BoneChief</kind>
            <selectionWeight>0.5</selectionWeight>
          </li>
        </options>
      </li>
    </pawnGroupMakers>

    <!-- Visuals and faction icon -->
    <homeIconPath>UI/Icons/Factions/ZhulIcon</homeIconPath>
    <colorSpectrum>
      <li>(0.2, 0.3, 0.2)</li>
      <li>(0.4, 0.5, 0.3)</li>
      <li>(0.6, 0.7, 0.4)</li>
    </colorSpectrum>
    <hairTags>
      <li>BeardFull</li>
      <li>Tribal</li>
    </hairTags>
    <apparelTags>
      <li>Tribal</li>
    </apparelTags>
  </FactionDef>
</Defs>
