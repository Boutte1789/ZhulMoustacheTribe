<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Zhul Custom Genes -->

  <!-- Zhul Alien Eyes Gene (FORCED for all Zhul) -->
  <GeneDef>
    <defName>ZHUL_AlienEyes</defName>
    <label>alien eyes</label>
    <description>Zhul have strange, luminous eyes unlike any human. This gene gives all Zhul the same unique, unnatural eyes.</description>
    <geneClass>Gene_EyeColor</geneClass>
    <eyeColor>(0.26,1.0,0.68,1)</eyeColor> <!-- Striking green, RGBA. Change to your chosen color if desired -->
    <displayCategory>Appearance</displayCategory>
    <iconPath>Things/Pawn/Humanlike/Heads/EyeOverlays/zhulalien_eyes_south</iconPath> <!-- Set to overlay texPath if using a custom mod/texture -->
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Heads/EyeOverlays/zhulalien_eyes_south</texPath>
      <drawSize>1.0</drawSize>
    </graphicData>
    <displayOrderInCategory>999</displayOrderInCategory>
    <locked>true</locked>
  </GeneDef>

  <!-- Zhul Beard Culture Gene -->
  <GeneDef>
    <defName>ZHUL_BeardCulture</defName>
    <label>beard culture</label>
    <description>This xenotype has an innate cultural connection to elaborate facial hair, automatically displaying beard overlays and receiving social bonuses from grooming rituals.</description>
    <iconPath>UI/Icons/Genes/Gene_Beauty</iconPath>
    <displayOrderInCategory>1000</displayOrderInCategory>
    <biostatCpx>1</biostatCpx>
    <biostatMet>0</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li>
          <symbol>curled</symbol>
          <weight>1.0</weight>
        </li>
      </prefixSymbols>
    </symbolPack>
    <statOffsets>
      <SocialImpact>0.2</SocialImpact>
      <Beauty>1</Beauty>
    </statOffsets>
    <exclusionTags>
      <li>Beard</li>
    </exclusionTags>
  </GeneDef>

  <!-- Zhul Cannibal Nature Gene -->
  <GeneDef>
    <defName>ZHUL_CannibalNature</defName>
    <label>cannibal nature</label>
    <description>This xenotype has an innate cannibalistic nature, always spawning with the cannibal trait and receiving mood bonuses from consuming human flesh.</description>
    <iconPath>UI/Icons/Genes/Gene_Aggressive</iconPath>
    <displayOrderInCategory>1001</displayOrderInCategory>
    <biostatCpx>2</biostatCpx>
    <biostatMet>1</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li>
          <symbol>flesh</symbol>
          <weight>1.0</weight>
        </li>
        <li>
          <symbol>bone</symbol>
          <weight>1.0</weight>
        </li>
      </prefixSymbols>
    </symbolPack>
    <forcedTraits>
      <li>
        <def>Cannibal</def>
        <degree>0</degree>
      </li>
    </forcedTraits>
    <conditionalStatAffecters>
      <li Class="ConditionalStatAffecter_InSunlight">
        <statDef>MoodOffset</statDef>
        <statOffset>2</statOffset>
      </li>
    </conditionalStatAffecters>
    <exclusionTags>
      <li>Cannibalism</li>
    </exclusionTags>
  </GeneDef>

  <!-- Zhul Tribal Terror Gene -->
  <GeneDef>
    <defName>ZHUL_TribalTerror</defName>
    <label>tribal terror</label>
    <description>This xenotype inspires fear in enemies through intimidating presence and ritual displays, providing combat bonuses but making social interactions more volatile.</description>
    <iconPath>UI/Icons/Genes/Gene_Aggressive</iconPath>
    <displayOrderInCategory>1002</displayOrderInCategory>
    <biostatCpx>2</biostatCpx>
    <biostatMet>1</biostatMet>
    <symbolPack>
      <prefixSymbols>
        <li>
          <symbol>terror</symbol>
          <weight>1.0</weight>
        </li>
        <li>
          <symbol>fear</symbol>
          <weight>1.0</weight>
        </li>
      </prefixSymbols>
    </symbolPack>
    <statOffsets>
      <MeleeDPS>0.3</MeleeDPS>
      <SocialImpact>0.3</SocialImpact>
      <NegotiationAbility>-0.2</NegotiationAbility>
    </statOffsets>
    <conditionalStatAffecters>
      <li Class="ConditionalStatAffecter_InCombat">
        <statDef>MeleeHitChance</statDef>
        <statOffset>0.1</statOffset>
      </li>
    </conditionalStatAffecters>
  </GeneDef>

