<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Advanced Social Interactions Like Popular Personality Mods -->
  
  <!-- Moustache Compliment -->
  <InteractionDef>
    <defName>ZT_MoustacheCompliment</defName>
    <label>compliment moustache</label>
    <socialFightBaseChance>0</socialFightBaseChance>
    <initiatorThought>ZT_ComplimentedMoustache</initiatorThought>
    <recipientThought>ZT_ReceivedMoustacheCompliment</recipientThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>30</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] complimented [RECIPIENT_nameDef]'s magnificent moustache.</li>
        <li>r_logentry->[INITIATOR_nameDef] praised the spiral perfection of [RECIPIENT_nameDef]'s facial hair.</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

  <!-- Share Cannibal Story -->
  <InteractionDef>
    <defName>ZT_ShareCannibalStory</defName>
    <label>share cannibal story</label>
    <socialFightBaseChance>0.02</socialFightBaseChance>
    <initiatorThought>ZT_SharedCannibalStory</initiatorThought>
    <recipientThought>ZT_HeardCannibalStory</recipientThought>
    <initiatorXpGainSkill>Social</initiatorXpGainSkill>
    <initiatorXpGainAmount>40</initiatorXpGainAmount>
    <logRulesInitiator>
      <rulesStrings>
        <li>r_logentry->[INITIATOR_nameDef] shared a disturbing cannibal tale with [RECIPIENT_nameDef].</li>
        <li>r_logentry->[INITIATOR_nameDef] recounted the taste of their enemies to [RECIPIENT_nameDef].</li>
      </rulesStrings>
    </logRulesInitiator>
  </InteractionDef>

</Defs>