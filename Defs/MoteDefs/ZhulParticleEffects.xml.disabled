<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Zhul Particle Effects and Visual Enhancements -->
  
  <!-- Spiral Oil Swirl Mote -->
  <ThingDef ParentName="MoteBase">
    <defName>ZT_Mote_SpiralOilSwirl</defName>
    <label>spiral oil swirl</label>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <graphicData>
      <texPath>Zhul/Motes/SpiralOilSwirl</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>MoteGlow</shaderType>
      <drawSize>(1.5, 1.5)</drawSize>
    </graphicData>
    <mote>
      <fadeInTime>0.5</fadeInTime>
      <solidTime>3.0</solidTime>
      <fadeOutTime>1.0</fadeOutTime>
      <moveSpeed>0.2</moveSpeed>
    </mote>
  </ThingDef>

