<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Advanced Zhul Crafting Recipes -->
  
  <!-- Spiral Oil Creation -->
  <RecipeDef>
    <defName>Make_ZT_SpiralOil</defName>
    <label>craft spiral oil</label>
    <description>Create mystical spiral oil from rare orchids and bone dust through ancient Zhul techniques.</description>
    <jobString>Creating spiral oil.</jobString>
    <workAmount>1200</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ZT_MoustacheOil</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Bone</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <products>
      <ZT_SpiralOil>2</ZT_SpiralOil>
    </products>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ZT_BoneAltar</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>ZT_AdvancedGrooming</researchPrerequisite>
  </RecipeDef>

  <!-- Blood-Tanned Leather Processing -->
  <RecipeDef>
    <defName>Make_ZT_BloodTannedLeather</defName>
    <label>blood-tan leather</label>
    <description>Tan leather using traditional Zhul blood-soaking techniques to create superior materials.</description>
    <jobString>Blood-tanning leather.</jobString>
    <workAmount>800</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_Butcher</soundWorking>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Leathery</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>HumanMeat</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
    </ingredients>
    <products>
      <ZT_BloodTannedLeather>3</ZT_BloodTannedLeather>
    </products>
    <skillRequirements>
      <Crafting>5</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ZT_BoneAltar</li>
      <li>ButcherTable</li>
    </recipeUsers>
    <researchPrerequisite>ZT_BloodCrafting</researchPrerequisite>
  </RecipeDef>

  <!-- Master Moustache Oil Creation -->
  <RecipeDef>
    <defName>Make_ZT_MasterMoustacheOil</defName>
    <label>create master moustache oil</label>
    <description>Create the legendary master moustache oil through elaborate ritual processes.</description>
    <jobString>Creating master moustache oil.</jobString>
    <workAmount>3000</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ZT_SpiralOil</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Gold</li>
          </thingDefs>
        </filter>
        <count>10</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ZT_AncestralWhispers</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <products>
      <ZT_MasterMoustacheOil>1</ZT_MasterMoustacheOil>
    </products>
    <skillRequirements>
      <Crafting>12</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <recipeUsers>
      <li>ZT_BoneAltar</li>
    </recipeUsers>
    <researchPrerequisite>ZT_MasterGrooming</researchPrerequisite>
  </RecipeDef>

</Defs>