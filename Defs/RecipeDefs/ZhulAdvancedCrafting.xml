    <jobString>carving spiral comb.</jobString>
    <workSpeedStat>CraftingSpeed</workSpeedStat>
    <effectWorking>Repair</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1800</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <skillRequirements>
      <Crafting>5</Crafting>
      <Artistic>4</Artistic>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.6</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Bone</li>
          </thingDefs>
        </filter>
        <count>8</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Bone</li>
        <li>Steel</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ZT_SpiralComb>1</ZT_SpiralComb>
    </products>
    <recipeUsers>
      <li>ZT_GroomingStation</li>
      <li>CraftingSpot</li>
    </recipeUsers>
    <researchPrerequisite>ZT_TribalCrafting</researchPrerequisite>
  </RecipeDef>

  <!-- Make Blood-Tanned Leather -->
  <RecipeDef>
    <defName>ZT_MakeBloodTannedLeather</defName>
    <label>tan leather with blood</label>
    <description>Create superior leather using traditional Zhul blood-tanning techniques.</description>
    <jobString>blood-tanning leather.</jobString>
    <workSpeedStat>CraftingSpeed</workSpeedStat>
    <effectWorking>ButcherFlesh</effectWorking>
    <soundWorking>Recipe_ButcherCorpseFlesh</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>1200</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <skillRequirements>
      <Crafting>4</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.5</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>HumanLeather</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>HumanMeat</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>HumanLeather</li>
        <li>HumanMeat</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ZT_BloodTannedLeather>2</ZT_BloodTannedLeather>
    </products>
    <recipeUsers>
      <li>CraftingSpot</li>
      <li>ZT_GroomingStation</li>
    </recipeUsers>
    <researchPrerequisite>ZT_BloodCrafting</researchPrerequisite>
  </RecipeDef>

  <!-- Craft Sacrificial Dagger -->
  <RecipeDef>
    <defName>ZT_CraftSacrificialDagger</defName>
    <label>craft sacrificial dagger</label>
    <description>Forge a ceremonial dagger used in Zhul tribal rituals. Requires advanced metalworking skills.</description>
    <jobString>crafting sacrificial dagger.</jobString>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smith</soundWorking>
    <workAmount>3600</workAmount>
    <unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
    <skillRequirements>
      <Crafting>8</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.9</workSkillLearnFactor>
    <recipeUsers>
      <li>ElectricSmithy</li>
      <li>FueledSmithy</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Metallic</li>
          </categories>
        </filter>
        <count>35</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>WoodLog</li>
          </thingDefs>
        </filter>
        <count>15</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Metallic</li>
      </categories>
      <thingDefs>
        <li>WoodLog</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ZT_SacrificialDagger>1</ZT_SacrificialDagger>
    </products>
  </RecipeDef>

</Defs>