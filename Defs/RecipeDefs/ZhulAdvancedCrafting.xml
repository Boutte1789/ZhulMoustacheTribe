<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Advanced Crafting Recipes Like Popular Mods -->
  
  <!-- Make Master Moustache Oil -->
  <RecipeDef>
    <defName>ZT_MakeMasterBeardOil</defName>
    <label>craft master beard oil</label>
    <description>Create premium beard oil using rare jungle orchids and ancestral techniques.</description>
    <jobString>crafting master beard oil.</jobString>
    <workSpeedStat>CraftingSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>2400</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>0.8</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ZT_BeardOil</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Medicine</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
      <li>
        <filter>
          <categories>
            <li>PlantFoodRaw</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ZT_BeardOil</li>
        <li>Medicine</li>
      </thingDefs>
      <categories>
        <li>PlantFoodRaw</li>
      </categories>
    </fixedIngredientFilter>
    <products>
      <ZT_MasterBeardOil>1</ZT_MasterBeardOil>
    </products>
    <recipeUsers>
      <li>ZT_GroomingStation</li>
    </recipeUsers>
    <researchPrerequisite>ZT_AdvancedGrooming</researchPrerequisite>
  </RecipeDef>

  <!-- Make Cursed Moustache Oil -->
  <RecipeDef>
    <defName>ZT_MakeCursedBeardOil</defName>
    <label>brew cursed beard oil</label>
    <description>Create dangerous cursed oil that enhances beard power but risks spiritual possession.</description>
    <jobString>brewing cursed beard oil.</jobString>
    <workSpeedStat>CraftingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <allowMixingIngredients>true</allowMixingIngredients>
    <workAmount>3600</workAmount>
    <targetCountAdjustment>1</targetCountAdjustment>
    <skillRequirements>
      <Crafting>8</Crafting>
      <Intellectual>6</Intellectual>
    </skillRequirements>
    <workSkill>Crafting</workSkill>
    <workSkillLearnFactor>1.0</workSkillLearnFactor>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>ZT_MasterBeardOil</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>HumanMeat</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Psychite</li>
          </thingDefs>
        </filter>
        <count>3</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>ZT_MasterBeardOil</li>
        <li>HumanMeat</li>
        <li>Psychite</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <ZT_CursedBeardOil>1</ZT_CursedBeardOil>
    </products>
    <recipeUsers>
      <li>ZT_GroomingStation</li>
    </recipeUsers>
    <researchPrerequisite>ZT_CursedRituals</researchPrerequisite>
  </RecipeDef>

  <!-- Make Spiral Comb -->
  <RecipeDef>
    <defName>ZT_MakeSpiralComb</defName>
    <label>carve spiral comb</label>
