<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <AbilityDef ParentName="PsycastBase">
    <defName>ZHUL_PsychicRitual</defName>
    <label>psychic ritual</label>
    <description>A powerful Zhul psychic ritual that channels ancestral spirits to disrupt enemy minds or protect Zhul kin from harm.</description>
    <iconPath>Things/Pawn/Abilities/PsychicShock</iconPath>
    <warmupStartSound>PsychicPulse</warmupStartSound>
    <mainVerb>
      <verbClass>Verb_CastPsycast</verbClass>
      <castTime>1.2</castTime>
      <range>18.9</range>
      <targetParams>
        <canTargetPawns>true</canTargetPawns>
        <canTargetSelf>false</canTargetSelf>
      </targetParams>
      <verbProperties>
        <defaultCooldownTime>90</defaultCooldownTime>
        <noiseRadius>5</noiseRadius>
      </verbProperties>
    </mainVerb>
    <level>4</level>
    <entropyGain>2.8</entropyGain>
    <psyfocusCost>0.14</psyfocusCost>
    <statOffsets>
      <PsychicSensitivity>0.2</PsychicSensitivity>
    </statOffsets>
    <effectComps>
      <li Class="CompProperties_AbilityEffect">
        <effectClass>AbilityEffect_Stun</effectClass>
        <durationTicks>240</durationTicks>
      </li>
    </effectComps>
    <goodwillImpact>-10</goodwillImpact>
  </AbilityDef>

  <AbilityDef ParentName="PsycastBase">
    <defName>ZHUL_PsychicFeast</defName>
    <label>psychic feast</label>
    <description>A secretive ritual that allows a Zhul pawn to psychically drain the will of a fallen enemy, restoring energy and power.</description>
    <iconPath>Things/Pawn/Abilities/PsychicShock</iconPath>
    <warmupStartSound>PsychicPulse</warmupStartSound>
    <mainVerb>
      <verbClass>Verb_CastPsycast</verbClass>
      <castTime>1.0</castTime>
      <range>10.9</range>
      <targetParams>
        <canTargetCorpses>true</canTargetCorpses>
        <canTargetSelf>false</canTargetSelf>
      </targetParams>
      <verbProperties>
        <defaultCooldownTime>120</defaultCooldownTime>
        <noiseRadius>5</noiseRadius>
      </verbProperties>
    </mainVerb>
    <level>5</level>
    <entropyGain>1.2</entropyGain>
    <psyfocusCost>0.10</psyfocusCost>
    <statOffsets>
      <PsychicSensitivity>0.25</PsychicSensitivity>
    </statOffsets>
    <effectComps>
      <li Class="CompProperties_AbilityEffect">
        <effectClass>AbilityEffect_RecoverEnergy</effectClass>
        <energyGain>0.6</energyGain>
      </li>
    </effectComps>
    <goodwillImpact>-5</goodwillImpact>
  </AbilityDef>
</Defs>
