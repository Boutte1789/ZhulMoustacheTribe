<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- Zhul Settlement Naming Rules -->
    <RulePackDef>
        <defName>ZT_SettlementNaming</defName>
        <include>
            <li>NamerSettlementTribal</li>
        </include>
        <rulePack>
            <rulesStrings>
                <!-- Alien tribal cannibal settlement names -->
                <li>name(p=2)->[alienword] [cannibalplace]</li>
                <li>name(p=2)->[cannibalplace] of the [alienword]</li>
                <li>name(p=1)->[fleshword] [tribalsite]</li>
                <li>name(p=1)->The [predatorword] [tribalsite]</li>
                
                <!-- Alien descriptors -->
                <li>alienword->Zhul</li>
                <li>alienword->Xeno</li>
                <li>alienword->Voidborn</li>
                <li>alienword->Starless</li>
                <li>alienword->Twisted</li>
                <li>alienword->Othering</li>
                <li>alienword->Nameless</li>
                <li>alienword->Darkened</li>
                
                <!-- Cannibal places -->
                <li>cannibalplace->Maw</li>
                <li>cannibalplace->Feast</li>
                <li>cannibalplace->Gorge</li>
                <li>cannibalplace->Butchery</li>
                <li>cannibalplace->Feeding</li>
                <li>cannibalplace->Harvest</li>
                <li>cannibalplace->Consumption</li>
                <li>cannibalplace->Devouring</li>
                
                <!-- Flesh-themed -->
                <li>fleshword->Marrow</li>
                <li>fleshword->Sinew</li>
                <li>fleshword->Viscera</li>
                <li>fleshword->Carrion</li>
                <li>fleshword->Gore</li>
                <li>fleshword->Meat</li>
                
                <!-- Predator-themed -->
                <li>predatorword->Hunting</li>
                <li>predatorword->Stalking</li>
                <li>predatorword->Prowling</li>
                <li>predatorword->Lurking</li>
                <li>predatorword->Savage</li>
                <li>predatorword->Ravenous</li>
                
                <!-- Tribal settlement types -->
                <li>tribalsite->Enclave</li>
                <li>tribalsite->Outpost</li>
                <li>tribalsite->Stronghold</li>
                <li>tribalsite->Lair</li>
                <li>tribalsite->Den</li>
                <li>tribalsite->Territory</li>
                <li>tribalsite->Domain</li>
            </rulesStrings>
        </rulePack>
    </RulePackDef>
</Defs>