<Defs>
    <!-- Ritual Chants -->
    <SoundDef>
        <defName>ZHUL_RitualChant</defName>
        <context>MapOnly</context>
        <eventNames />
        <maxSimultaneous>3</maxSimultaneous>
        <subSounds>
            <li>
                <grains>
                    <li Class="AudioGrain_Clip">
                        <clipPath>Sounds/Zhul/ZHUL_RitualChant</clipPath>
                    </li>
                </grains>
                <volumeRange>0.8~1.0</volumeRange>
                <pitchRange>0.95~1.05</pitchRange>
                <distRange>15~50</distRange>
                <sustainLoop>true</sustainLoop>
                <sustainLoopDurationRange>8~15</sustainLoopDurationRange>
