<?xml version="1.0" encoding="utf-8"?>
<Defs>
    <!-- Moustache Oil -->
    <ThingDef ParentName="ResourceBase">
        <defName>ZHUL_MoustacheOil</defName>
        <label>moustache oil</label>
        <description>A fragrant oil made from jungle orchid extracts, used in sacred Zhul moustache grooming rituals. The oil is said to strengthen both the hair and the spirit of those who use it properly.</description>
        <graphicData>
            <texPath>Things/Item/Zhul/MoustacheOil</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(0.6,0.6)</drawSize>
        </graphicData>
        <soundInteract>Standard_Drop</soundInteract>
        <soundDrop>Standard_Drop</soundDrop>
        <stackLimit>25</stackLimit>
        <healthAffectsPrice>false</healthAffectsPrice>
        <statBases>
            <MaxHitPoints>60</MaxHitPoints>
            <MarketValue>15</MarketValue>
            <Mass>0.2</Mass>
            <Flammability>1.0</Flammability>
            <DeteriorationRate>6</DeteriorationRate>
        </statBases>
        <thingCategories>
            <li>Manufactured</li>
        </thingCategories>
        <comps>
            <li Class="CompProperties_Forbiddable"/>
            <li Class="CompProperties_Usable">
                <useJob>UseItem</useJob>
                <useLabel>Perform moustache grooming ritual</useLabel>
                <useDuration>180</useDuration>
                <compClass>ZhulTribe.CompUseEffect_MoustacheOil</compClass>
            </li>
            <li Class="CompProperties_UseEffectDestroySelf"/>
        </comps>
    </ThingDef>

    <!-- Sacrificial Dagger -->
