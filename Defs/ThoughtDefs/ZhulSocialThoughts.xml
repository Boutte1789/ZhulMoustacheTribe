<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Social Interaction Thoughts -->
  
  <ThoughtDef>
    <defName>ZT_ComplimentedBeard</defName>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>complimented beard</label>
        <description>Someone appreciated my magnificent beard! The ancestors smile upon me.</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ZT_ReceivedBeardCompliment</defName>
    <durationDays>2</durationDays>
    <stackLimit>3</stackLimit>
    <stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
    <stages>
      <li>
        <label>received beard compliment</label>
        <description>My beard has been praised by another. This strengthens my connection to the ancestors.</description>
        <baseMoodEffect>4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ZT_SharedCannibalStory</defName>
    <durationDays>1</durationDays>
    <stackLimit>3</stackLimit>
    <stages>
      <li>
        <label>shared cannibal story</label>
        <description>I told someone about my cannibalistic experiences. It felt good to share the dark memories.</description>
        <baseMoodEffect>3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>ZT_HeardCannibalStory</defName>
    <durationDays>2</durationDays>
    <stackLimit>5</stackLimit>
    <stages>
      <li>
        <label>heard cannibal story</label>
        <description>Someone shared a disturbing cannibal tale with me. I'm not sure how I feel about this.</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>