<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <!-- Advanced Zhul Traits for Professional Mod Quality -->
  
  <!-- Spiral-Minded Trait -->
  <TraitDef>
    <defName>ZT_SpiralMinded</defName>
    <commonality>0.3</commonality>
    <degreeDatas>
      <li>
        <label>spiral-minded</label>
        <description>[PAWN_nameDef] is fascinated by spiraling patterns and sees them everywhere. This obsession makes [PAWN_objective] exceptionally skilled at bone carving and beard cultivation, but [PAWN_pronoun] becomes distressed when unable to create or observe spiral designs.</description>
        <degree>0</degree>
        <statOffsets>
          <CraftingSpeed>0.3</CraftingSpeed>
          <SculptingSpeed>0.4</SculptingSpeed>
        </statOffsets>
        <skillGains>
          <Crafting>2</Crafting>
          <Artistic>1</Artistic>
        </skillGains>
        <mentalStateGivers>
          <li>
            <mentalState>Berserk</mentalState>
            <mtbDays>30</mtbDays>
            <reasonLabel>spiral deprivation</reasonLabel>
          </li>
        </mentalStateGivers>
        <forcedPassions>
          <Crafting>Major</Crafting>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>NaturalMood</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Bone-Crafter Trait -->
  <TraitDef>
    <defName>ZT_BoneCrafter</defName>
    <commonality>0.2</commonality>
    <degreeDatas>
      <li>
        <label>bone-crafter</label>
        <description>[PAWN_nameDef] has an innate understanding of bone structure and density. [PAWN_pronoun] can craft items from bones with supernatural skill, creating artifacts that seem to pulse with their own dark energy. Working with bones fills [PAWN_objective] with deep satisfaction.</description>
        <degree>0</degree>
        <statOffsets>
          <CraftingSpeed>0.5</CraftingSpeed>
          <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
        </statOffsets>
        <skillGains>
          <Crafting>3</Crafting>
          <Mining>1</Mining>
        </skillGains>
        <thoughtOffsets>
          <li>
            <thoughtDef>ZT_BoneCraftingSatisfaction</thoughtDef>
            <offset>8</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Crafting>Major</Crafting>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Lazy</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Moustache Master Trait -->
  <TraitDef>
    <defName>ZT_BeardMaster</defName>
    <commonality>0.1</commonality>
    <degreeDatas>
      <li>
        <label>beard master</label>
        <description>[PAWN_nameDef] has achieved the ultimate mastery of beard cultivation. [PAWN_possessive] facial hair is a work of art that inspires awe in allies and terror in enemies. [PAWN_pronoun] can perform grooming rituals that grant powerful bonuses to the entire tribe.</description>
        <degree>0</degree>
        <statOffsets>
          <SocialImpact>0.5</SocialImpact>
          <NegotiationAbility>0.3</NegotiationAbility>
          <ConversionPower>0.4</ConversionPower>
        </statOffsets>
        <skillGains>
          <Social>4</Social>
          <Intellectual>2</Intellectual>
        </skillGains>
        <mentalBreakThreshold>0.05</mentalBreakThreshold>
        <thoughtOffsets>
          <li>
            <thoughtDef>ZT_BeardPride</thoughtDef>
            <offset>12</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Social>Major</Social>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Ugly</li>
      <li>Abrasive</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Spirit Listener Trait -->
  <TraitDef>
    <defName>ZT_SpiritListener</defName>
    <commonality>0.15</commonality>
    <degreeDatas>
      <li>
        <label>spirit listener</label>
        <description>[PAWN_nameDef] can hear the whispers of ancestral spirits trapped in bones and beards. These voices guide [PAWN_objective] in rituals and ceremonies, but sometimes they become overwhelming, driving [PAWN_objective] to temporary madness.</description>
        <degree>0</degree>
        <statOffsets>
          <PsychicSensitivity>0.5</PsychicSensitivity>
          <MentalBreakThreshold>-0.1</MentalBreakThreshold>
        </statOffsets>
        <skillGains>
          <Intellectual>2</Intellectual>
          <Social>1</Social>
        </skillGains>
        <mentalStateGivers>
          <li>
            <mentalState>Wander_Psychotic</mentalState>
            <mtbDays>60</mtbDays>
            <reasonLabel>overwhelming spirits</reasonLabel>
          </li>
        </mentalStateGivers>
        <thoughtOffsets>
          <li>
            <thoughtDef>ZT_SpiritGuidance</thoughtDef>
            <offset>6</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Intellectual>Minor</Intellectual>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>PsychicallySensitive</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Cannibal Devotee Trait -->
  <TraitDef>
    <defName>ZT_CannibalDevotee</defName>
    <commonality>0.4</commonality>
    <degreeDatas>
      <li>
        <label>cannibal devotee</label>
        <description>[PAWN_nameDef] has embraced cannibalism not just as sustenance, but as a sacred art form. [PAWN_pronoun] gains profound spiritual satisfaction from consuming humanlike meat and can prepare it in ways that grant bonuses to other cannibals.</description>
        <degree>0</degree>
        <statOffsets>
          <CookSpeed>0.4</CookSpeed>
          <DrugCookingSpeed>0.3</DrugCookingSpeed>
        </statOffsets>
        <skillGains>
          <Cooking>3</Cooking>
          <Medicine>1</Medicine>
        </skillGains>
        <thoughtOffsets>
          <li>
            <thoughtDef>AteHumanlikeMeatDirect</thoughtDef>
            <offset>15</offset>
          </li>
          <li>
            <thoughtDef>AteHumanlikeMeatAsIngredient</thoughtDef>
            <offset>10</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Cooking>Major</Cooking>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Cannibal</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Terror Aura Trait -->
  <TraitDef>
    <defName>ZT_TerrorAuraTrait</defName>
    <commonality>0.1</commonality>
    <degreeDatas>
      <li>
        <label>terror aura</label>
        <description>[PAWN_nameDef] radiates an aura of primal fear that affects all who encounter [PAWN_objective]. [PAWN_possessive] presence alone can break enemy morale, but this same aura makes it difficult for [PAWN_objective] to form close relationships with allies.</description>
        <degree>0</degree>
        <statOffsets>
          <MeleeDodgeChance>0.15</MeleeDodgeChance>
          <ArrestSuccessChance>0.3</ArrestSuccessChance>
          <SocialImpact>-0.2</SocialImpact>
        </statOffsets>
        <skillGains>
          <Melee>2</Melee>
          <Shooting>1</Shooting>
        </skillGains>
        <mentalBreakThreshold>0.1</mentalBreakThreshold>
        <thoughtOffsets>
          <li>
            <thoughtDef>ZT_FearRespect</thoughtDef>
            <offset>5</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Melee>Minor</Melee>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>Kind</li>
      <li>Beautiful</li>
    </conflictingTraits>
  </TraitDef>

  <!-- Bone Whisperer Trait -->
  <TraitDef>
    <defName>ZT_BoneWhisperer</defName>
    <commonality>0.08</commonality>
    <degreeDatas>
      <li>
        <label>bone whisperer</label>
        <description>[PAWN_nameDef] can communicate with the spirits trapped within bones, learning their secrets and using this knowledge to enhance rituals and ceremonies. The bones literally speak to [PAWN_objective], sharing ancient wisdom and terrible truths.</description>
        <degree>0</degree>
        <statOffsets>
          <ResearchSpeed>0.3</ResearchSpeed>
          <GlobalLearningFactor>0.2</GlobalLearningFactor>
          <PsychicSensitivity>0.3</PsychicSensitivity>
        </statOffsets>
        <skillGains>
          <Intellectual>4</Intellectual>
          <Medicine>2</Medicine>
        </skillGains>
        <thoughtOffsets>
          <li>
            <thoughtDef>ZT_BoneWisdom</thoughtDef>
            <offset>8</offset>
          </li>
        </thoughtOffsets>
        <forcedPassions>
          <Intellectual>Major</Intellectual>
        </forcedPassions>
      </li>
    </degreeDatas>
    <conflictingTraits>
      <li>SlowLearner</li>
    </conflictingTraits>
  </TraitDef>

</Defs>